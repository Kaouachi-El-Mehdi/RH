{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "runserver",
                "127.0.0.1:8000"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/venv/Scripts/python.exe"
        },
        {
            "name": "Django: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/venv/Scripts/python.exe"
        }
    ]
}
